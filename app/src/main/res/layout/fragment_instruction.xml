<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <WebView
        android:id="@+id/web_view_instruction"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>

    <ScrollView
        android:id="@+id/layout_motorbike_instruction"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/text_temp_title_instruction"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:fontFamily="@font/comfortaa"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:text="@string/text_temp_title_instruction"
                android:layout_margin="@dimen/dp_5"/>

            <ImageView
                android:id="@+id/image_instruction"
                android:layout_width="@dimen/dp_0"
                android:layout_height="@dimen/dp_0"
                app:layout_constraintDimensionRatio="H,16:9"
                android:layout_marginTop="@dimen/dp_10"
                app:layout_constraintEnd_toEndOf="@id/text_temp_title_instruction"
                app:layout_constraintStart_toStartOf="@id/text_temp_title_instruction"
                app:layout_constraintTop_toBottomOf="@id/text_temp_title_instruction"
                android:src="@drawable/image_instruction_motorbike"/>

            <TextView
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:fontFamily="@font/comfortaa"
                app:layout_constraintEnd_toEndOf="@id/text_temp_title_instruction"
                app:layout_constraintStart_toStartOf="@id/text_temp_title_instruction"
                app:layout_constraintTop_toBottomOf="@id/image_instruction"
                android:text="@string/text_instruction_practice_content"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>