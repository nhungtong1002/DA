<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_10">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/text_exam_times"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_20"
            android:fontFamily="@font/comfortaa"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Lần 1" />

        <TextView
            android:id="@+id/text_exam_numbers_correct_answer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:fontFamily="@font/comfortaa"
            app:layout_constraintStart_toStartOf="@id/text_exam_times"
            app:layout_constraintTop_toBottomOf="@id/text_exam_times"
            tools:text="Số câu làm đúng: 27/30 câu" />

        <TextView
            android:id="@+id/text_exam_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:fontFamily="@font/comfortaa"
            app:layout_constraintStart_toStartOf="@id/text_exam_numbers_correct_answer"
            app:layout_constraintTop_toBottomOf="@id/text_exam_numbers_correct_answer"
            tools:text="Kết quả thi: ĐẠT" />

        <TextView
            android:id="@+id/text_exam_description"
            android:layout_width="@dimen/fill_constraint"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_20"
            android:fontFamily="@font/comfortaa"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="@id/text_exam_result"
            app:layout_constraintTop_toBottomOf="@id/text_exam_result"
            tools:text="@string/text_temp_long_text" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>